<p id="notice"><%= notice %></p>

<% if @podcasts.empty? %>

  <h1>No podcast now. Lets create first podcast!</h1>

<% else %>
  <h1>Listing Podcasts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Artwork</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @podcasts.each do |podcast| %>
        <tr>
          <td><%= image_tag podcast.artwork.url, :size => '50x50' %></td>
          <td><%= podcast.title %></td>
          <td><%= link_to 'Show', podcast %></td>
          <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
          <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Podcast', new_podcast_path %>
